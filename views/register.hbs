

{{#if messages}}
    <div class="alert alert-danger">
        Invalid credentials
    </div>
{{else}}
    <div class="alert alert-info">
        Please enter your credentials
    </div>
{{/if}}
<form method="post">
    <fieldset class="form-group">
        <label for="username" class="col-2 control-label">Username: *</label>
        <input name="username" id="username" required type="email"
        placeholder="email@email.com" />
    </fieldset>
    <fieldset class="form-group">
        <label for="password" class="col-2 control-label">Password: *</label>
        <input name="password" id="password" type="password" required
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"  />
    </fieldset>
    <fieldset class="form-group">
        <label for="confirm" class="col-2 control-label">Confirm: *</label>
        <input name="confirm" id="confirm" type="password" required 
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" />
    </fieldset>
    <fieldset class="form-group">
        <button class="btn btn-dark offset-3">Register</button>
        <hr />
            Already have an account?  <a href="/login" title="Login"><button type="button" class="btn btn-dark">Login</button></a>
    </fieldset>
</form>